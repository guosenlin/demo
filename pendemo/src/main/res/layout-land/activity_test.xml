<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffcc">


    <ImageView
        android:id="@+id/option_locater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/mind_guide_canvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mind_guide_bg">


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/select_box"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:background="#cccccc">

        <ImageView
            android:id="@+id/op_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:background="@drawable/cpp"/>

        <ImageView
            android:id="@+id/op_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:background="@drawable/go"/>

        <ImageView
            android:id="@+id/op_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:background="@drawable/java"/>

        <ImageView
            android:id="@+id/op_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:background="@drawable/html"/>
    </LinearLayout>
</RelativeLayout>
