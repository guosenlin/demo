<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffcc">

    <RelativeLayout
        android:id="@+id/mind_guide_canvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mind_guide_bg">


    </RelativeLayout>

    <TableLayout
        android:id="@+id/select_box"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#cccccc">

        <ImageView
            android:id="@+id/option_locater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TableRow
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/op_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cpp"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/op_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/go"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/op_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/java"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/op_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/html"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
