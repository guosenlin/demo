<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/connection_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ico_no_connected_l"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/connection_txt"
        android:layout_below="@id/connection_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:textColor="#333333"
        android:textSize="17sp"
        android:text="未找到智能笔"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/message_txt"
        android:layout_below="@id/connection_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="13sp"
        android:lineSpacingExtra="3dp"
        android:textColor="#333"
        android:text="·请确认智能笔电源已开启\n·请确认智能笔在手机附近\n·请确认手机蓝牙已开启\n·请确认配对的是你自己的智能笔！"/>


    <Button
        android:id="@+id/goto_btn"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="52dp"
        android:text="重新搜索"
        android:textColor="@android:color/white"
        android:textSize="17sp"/>
</RelativeLayout>
